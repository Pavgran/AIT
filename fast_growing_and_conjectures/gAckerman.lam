-- a simplified Ackermann function g m n = G^m succ n with G f n = f^n n
-- g 0 n = n+1
-- g 1 n = 2*n
-- g 2 n = n*2^n
-- g (m+1) n = (g m)^n n
-- g 3 0 = 0
-- g 3 1 = 1 * 2^1 = 2
-- g 3 2 = 2 * 2^2 * 2^(2*(2^2)) = 8 * 2^8 = 2048
-- g 3 3 = X*X^X where X = 81*81^81 = 3131637955275966295145785461996019673777351260790443889370411675044410005923070780300593191972751121637594039386625316913587793289310973381839010441114380961
let
  succ = \n\f\x.n f (f x);
  G = \f\n.n f n;
  g = \m.m G succ
in g
